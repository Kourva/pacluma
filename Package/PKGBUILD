Maintainer: Mike Kourva <realkourva@proton.me>

pkgname=pacluma
pkgver=1.0.0
pkgrel=1
pkgdesc="Colorful Pacman -Ss for easy identification of installed packages and repository names"
arch=('any')
url="https://github.com/Kourva/pacluma"
license=('MIT')

depends=('python') 

source=("https://github.com/Kourva/pacluma/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('201337e2e647414f408cb3fe6327f4c59bb8db0e84282df91e772619ca629205')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    # Nothing needs to be done here
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -Dm755 pacluma.py "${pkgdir}/usr/bin/pacluma"
}
